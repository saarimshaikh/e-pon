generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql" // Adjus the provider based on your database
  url      = env("DATABASE_URL")
}

model Users {
  user_id    String   @id @default(uuid()) @db.Uuid
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
}
